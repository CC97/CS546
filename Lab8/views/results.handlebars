<h1 class="title">{{document_title}}</h1>
<main>
    <h2 class="name">{{searchTerm}}</h2>
    {{#if characters}}
    <ul class="results">
        {{#each characters}}
        <li class="results">
            <a href="/characters/{{this.id}}">{{this.name}}</a>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p class="not-found">We're sorry, but no results were found for {{searchTerm}}.</p>
    {{/if}}
    <a class="back" href="/">Make another search</a>
</main>